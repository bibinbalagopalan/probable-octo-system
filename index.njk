<style>
  /* Hero Section - Keep as is */
  /* General Reset - Keep as is */
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  body {
    font-family: "Ubuntu", sans-serif;
    color: white;
    background-color: #000;
    overflow-x: hidden;
  }
  /* Hero Section - Keep as is */
  .hero {
    display: flex;
    height: 100vh;
    background: url("./assets/images/pexels-karola-g-5206940.jpg") center/cover no-repeat;
    position: relative;
    overflow: hidden;
  }
  .hero::before {
    content: "";
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.6);
    z-index: 0;
  }
  .hero-left,
  .hero-right {
    position: relative;
    z-index: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 4rem;
  }
  /* Adjusted proportions — LEFT is larger */
  .hero-left {
    flex: 0 0 65%;
    background: black;
    clip-path: polygon(0 0, 85% 0, 75% 100%, 0% 100%);
  }
  .hero-right {
    flex: 0 0 35%;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  /* Left content */
  .hero-left h1, /* Changed h2 to h1 for semantic HTML */
  .hero-left h2 {
    font-size: 2.2rem;
    line-height: 1.4;
    margin-bottom: 1rem;
  }
  .hero-left p {
    margin-bottom: 1rem;
    font-size: 1.1rem;
  }
  .exam-grid {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }
  .exam-grid span {
    background: rgba(255, 255, 255, 0.1);
    padding: 0.5rem 1rem;
    border-radius: 5px;
    border: 1px solid rgba(255, 255, 255, 0.2);
  }
  /* CTA Section - Keep as is */
  .cta-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }
  .cta-btn {
    font-family: "Ubuntu", sans-serif; /* Match body font */
    background-color: #fcd800;
    color: black;
    border: none;
    padding: 1rem 2.2rem;
    font-size: 1.1rem;
    border-radius: 50px; /* Rounded edges */
    cursor: pointer;
    transition: transform 0.3s, background-color 0.3s;
  }
  .cta-btn:hover {
    transform: scale(1.05);
    background-color: #ffe64d;
  }
  .cta-text {
    margin-top: 0.8rem;
    font-size: 1rem;
    color: white;
  }
  /* Courses Section Styling */
  .courses {
    padding: 6rem 2rem;
    background: #000;
  }
  .courses .container {
    max-width: 1200px;
    margin: 0 auto;
    text-align: center;
  }
  .courses h2 {
    font-size: 2rem;
    color: white;
    margin-bottom: 3rem;
    font-weight: 600;
  }
  .courses-grid {
    /* Background from original inline style */
    background: rgba(255, 255, 255, 0.05);
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 30px;
  }
  .course-column {
    border-radius: 10px;
    overflow: hidden;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
    border: 1px solid #1a1a1a; /* Subtle border for better separation */
  }
  .course-row {
    border-bottom: 1px solid #333;
  }
  .course-row:last-child {
    border-bottom: none;
  }
  .exam-header {
    padding: 20px; /* Reduced vertical padding slightly */
    cursor: pointer;
    display: flex;
    justify-content: space-between;
    align-items: center;
    transition: background-color 0.3s;
  }
  /* Focus and hover state for accessibility and clarity */
  .exam-header:hover,
  .exam-header:focus {
    background-color: #3a3a3a;
    outline: none; /* Remove default focus ring if you provide a custom one */
    box-shadow: inset 0 0 0 2px #fcd800;
  }
  .exam-name {
    font-size: 1.3rem;
    font-weight: 500;
    color: #fcd800; /* Highlight exam names */
  }
  .toggle-icon {
    font-size: 1.2rem;
    transition: transform 0.3s;
  }
  /* Use height transition for smooth collapse */
  .exam-content {
    max-height: 1000px;
    overflow: hidden;
    transition: max-height 0.5s ease;
  }
  .exam-content.collapsed {
    max-height: 0;
  }
  /* Ensure screen readers ignore collapsed content */
  .exam-content[aria-hidden="true"] {
    display: none;
  }
  .subject {
    padding: 10px 20px; /* Reduced vertical padding */
    border-bottom: 1px solid #3a3a3a;
  }
  .subject:last-child {
    border-bottom: none;
  }
  .subject-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    cursor: pointer;
    padding: 5px 0;
  }
  /* Focus and hover state for accessibility and clarity */
  .subject-header:hover,
  .subject-header:focus {
    color: #ccc;
    outline: none;
  }
  .subject-name {
    font-size: 1.1rem;
    font-weight: 500;
    color: #fff; /* Subject names are white */
  }
  .chapters {
    padding-left: 20px;
    max-height: 500px;
    overflow: hidden;
    transition: max-height 0.4s ease;
  }
  .chapters.collapsed {
    max-height: 0;
  }
  /* Ensure screen readers ignore collapsed content */
  .chapters[aria-hidden="true"] {
    display: none;
  }
  .chapter {
    padding: 5px 0; /* Reduced vertical padding */
    border-bottom: 1px solid #444;
  }
  .chapter:last-child {
    border-bottom: none;
  }
  .chapter a {
    color: #6ab0ff;
    text-decoration: none;
    transition: color 0.3s, background-color 0.3s;
    display: block;
    padding: 5px 10px;
    border-radius: 4px;
  }
  .chapter a:hover,
  .chapter a:focus {
    /* Added focus state */
    color: #a8d2ff;
    background-color: rgba(106, 176, 255, 0.1);
    outline: none;
  }
  .loading {
    grid-column: 1 / -1; /* Center across both columns */
    text-align: center;
    padding: 20px;
    color: #aaa;
  }
  /* Responsive (Mobile) */
  @media(max-width: 768px) {
    .hero {
      flex-direction: column;
      background: url("assets/pexels-karola-g-5206940.jpg") center/cover no-repeat;
      height: auto; /* Changed from original */
    }
    .hero-left {
      background: rgba(0, 0, 0, 0.7);
      clip-path: none;
      flex: none;
      padding: 2rem 2rem 3rem; /* Combined from later rule */
    }
    .hero-right {
      background: rgba(0, 0, 0, 0.7);
      flex: none;
      align-items: center;
      justify-content: center;
      padding: 0 2rem 2rem; /* Adjusted for better spacing on mobile */
    }
    .hero-left h1, /* Changed h2 to h1 */
    .hero-left h2 {
      font-size: 1.8rem;
    }
    .exam-grid {
      gap: 0.5rem;
    }
    .cta-container {
      align-items: center;
      text-align: center;
    }
    /* Courses Grid Mobile */
    .courses-grid {
      grid-template-columns: 1fr;
      gap: 20px;
    }
    .course-column {
      box-shadow: 0 3px 10px rgba(0, 0, 0, 0.5);
    }
  }
  /* ========================= SPONSORS SECTION - Keep as is ========================= */
  .sponsors {
    position: relative;
    background: linear-gradient(to bottom, rgba(0, 0, 0, 0.8) 0%, rgba(0, 0, 0, 0.95) 40%, #000 100%);
    padding: 6rem 2rem;
    text-align: center;
    overflow: hidden;
  }
  .sponsors .overlay {
    content: "";
    position: absolute;
    inset: 0;
    backdrop-filter: blur(12px);
    background: rgba(255, 255, 255, 0.05); /* Glassy overlay */
    z-index: 0;
  }
  .sponsors-content {
    position: relative;
    z-index: 1;
    max-width: 1200px;
    margin: 0 auto;
  }
  .sponsors-content h2 {
    font-size: 1.8rem;
    margin-bottom: 3rem;
    color: white;
    font-weight: 500;
  }
  /* Sponsor Grid */
  .sponsor-grid {
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    gap: 2rem;
    justify-items: center;
    align-items: center;
  }
  .sponsor-grid img {
    height: 70px; /* Uniform logo height */
    width: auto;
    object-fit: contain;
    filter: brightness(0.9) contrast(1.1);
    transition: transform 0.3s ease, filter 0.3s ease;
    border-radius: 10px;
  }
  .sponsor-grid img:hover {
    transform: scale(1.05);
    filter: brightness(1.1);
  }
  /* Responsive */
  @media(max-width: 992px) {
    .sponsor-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 1.5rem;
    }
  }
  @media(max-width: 600px) {
    .sponsor-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }
    .sponsors-content h2 {
      font-size: 1.4rem;
      margin-bottom: 2rem;
    }
    .sponsor-grid img {
      height: 60px;
    }
  }
  /* "View All Sponsors" link */
  .view-all {
    display: inline-block;
    margin-top: 2.5rem;
    font-size: 1rem;
    color: #fcd800;
    text-decoration: none;
    font-weight: 500;
    transition: color 0.3s, transform 0.3s;
  }
  .view-all:hover {
    color: #ffe64d;
    transform: translateY(-2px);
  }
  /* Mobile adjustments */
  @media(max-width: 768px) {
    /* Show only first 4 logos on mobile */
    .sponsor-grid img:nth-child(n + 5) {
      display: none;
    }
  }
  /* ========================= WHY LEARN SECTION (Two-Column Grid) - Keep as is ========================= */
  .why-learn {
    position: relative;
    background: linear-gradient(to bottom, rgba(0,0,0,0.9), #000);
    padding: 6rem 2rem;
    text-align: center;
    color: white;
    overflow: hidden;
  }
  .why-learn .overlay {
    position: absolute;
    inset: 0;
    backdrop-filter: blur(12px);
    background: rgba(255, 255, 255, 0.03);
    z-index: 0;
  }
  .why-learn-content {
    position: relative;
    z-index: 1;
    max-width: 1200px;
    margin: 0 auto;
  }
  .why-learn-content h2 {
    font-size: 2rem;
    margin-bottom: 4rem;
    font-weight: 600;
  }
  /* Grid layout for features */
  .feature-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 3rem;
    text-align: left;
  }
  .feature-row h3 {
    font-size: 1.5rem;
    font-weight: 500;
    margin-bottom: 1rem;
  }
  .feature-row p {
    font-size: 1rem;
    line-height: 1.6;
    color: #e0e0e0;
  }
  /* CTA Button */
  .why-learn .cta-container {
    margin-top: 3rem;
    text-align: center;
  }
  .why-learn .cta-btn {
    background-color: #fcd800;
    color: #000;
    font-family: 'Ubuntu', sans-serif;
    font-size: 1rem;
    font-weight: 500;
    border: none;
    border-radius: 8px;
    padding: 0.75rem 2rem;
    cursor: pointer;
    transition: transform 0.3s, background-color 0.3s;
  }
  .why-learn .cta-btn:hover {
    background-color: #ffe64d;
    transform: translateY(-2px);
  }
  /* Responsive */
  @media(max-width: 992px) {
    .feature-grid {
      grid-template-columns: 1fr;
      gap: 2.5rem;
      text-align: center;
    }
    .feature-row h3 {
      font-size: 1.35rem;
    }
    .feature-row p {
      font-size: 0.95rem;
    }
    .why-learn-content h2 {
      font-size: 1.7rem;
      margin-bottom: 3rem;
    }
    .why-learn .cta-btn {
      width: 90%;
      max-width: 300px;
    }
  }
  /* ========================= FAQ SECTION - Keep as is ========================= */
  .faqs {
    background: #000;
    color: #fff;
    padding: 6rem 2rem;
    text-align: center;
  }
  .faqs h2 {
    font-size: 2rem;
    margin-bottom: 3rem;
    font-weight: 600;
  }
  .faq-item {
    margin-bottom: 1rem;
    border-bottom: 1px solid #333;
  }
  .faq-question {
    background: none;
    border: none;
    width: 100%;
    text-align: left;
    padding: 1rem 0;
    font-size: 1.1rem;
    color: #fcd800;
    cursor: pointer;
    transition: color 0.3s;
    font-family: 'Ubuntu', sans-serif;
    font-weight: 500;
  }
  .faq-question:hover,
  .faq-question:focus {
    /* Added focus state for accessibility */
    color: #ffe64d;
    outline: none;
  }
  .faq-answer {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.35s ease;
    text-align: left;
    padding-left: 1rem;
    font-size: 1rem;
    line-height: 1.6;
    color: #e0e0e0;
  }
  /* Expanded FAQ */
  .faq-item.active .faq-answer {
    max-height: 500px; /* enough to show answer */
    margin-bottom: 1rem;
  }
  /* Responsive */
  @media(max-width: 768px) {
    .faq-question {
      font-size: 1rem;
    }
    .faq-answer {
      font-size: 0.95rem;
      padding-left: 0.5rem;
    }
  }
</style>
